#!/usr/bin/env python

from testify import *
from untwisted import event

@test
@event.connect
def callThenShift():
  expect(1)

  sample = event.sequence()
  sample('Call then shift')
  equal(('Call then shift',), (yield sample.shift()))

@event.connect
def shiftThenCall():
  expect(1)

  equal(('Shift then call',), (yield event.sequence().shift()))

test(lambda: shiftThenCall()('Shift then call'))
